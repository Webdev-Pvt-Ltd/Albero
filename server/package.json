{
    "name": "ts-backend-production-setup",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.js",
    "scripts": {
        "build": "tsc",
        "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "prepare": "husky",
        "generate": "prisma generate",
        "postinstall": "prisma generate",
        "migrate:dev": "cross-env MIGRATE_MODE=development prisma migrate dev --name init",
        "migrate:prod": "cross-env MIGRATE_MODE=production prisma migrate deploy"
    },
    "keywords": [],
    "author": "",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.32.0",
        "@types/cors": "^2.8.19",
        "@types/cron": "^2.0.1",
        "@types/dotenv-flow": "^3.3.3",
        "@types/express": "^5.0.3",
        "@types/helmet": "^0.0.48",
        "@types/node": "^24.3.1",
        "@types/nodemailer": "^7.0.1",
        "@types/pg": "^8.15.5",
        "@types/source-map-support": "^0.5.10",
        "@types/winston": "^2.4.4",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "express": "^5.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "prisma": "^6.15.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.38.0"
    },
    "dependencies": {
        "@prisma/client": "^6.15.0",
        "colorette": "^2.0.20",
        "cors": "^2.8.5",
        "cron": "^4.3.3",
        "cross-env": "^10.0.0",
        "dotenv-flow": "^4.1.0",
        "helmet": "^8.1.0",
        "nodemailer": "^7.0.6",
        "pg": "^8.16.3",
        "rate-limiter-flexible": "^7.2.0",
        "source-map-support": "^0.5.21",
        "winston": "^3.17.0"
    }
}
